---
interface Props {
  step: number;
  title: string;
  description: string;
  delay?: number;
}

const { step, title, description, delay = 0 } = Astro.props;
---

<div class="text-center" data-aos="fade-up" data-aos-delay={delay}>
  <div class="bg-white rounded-lg p-6 shadow-lg">
    <div class="text-3xl font-bold text-[#030099] mb-4">{step}</div>
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-gray-600">{description}</p>
  </div>
</div>