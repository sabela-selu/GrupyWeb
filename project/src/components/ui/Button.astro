---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
  class?: string;
}

const { href, variant = 'primary', class: className } = Astro.props;
---

<a
  href={href}
  class:list={[
    'px-8 py-3 rounded-lg font-semibold transition',
    variant === 'primary' ? 'bg-white text-[#030099] hover:bg-gray-100' : 'bg-[#030099] text-white hover:bg-[#030099]/90',
    className
  ]}
>
  <slot />
</a>